#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <5>;
        columns = <11>;

        map = <
                RC(1,2) RC(1,3) RC(1,4) RC(1,5)          RC(1,6) RC(1,7) RC(1,8) RC(1,9)
RC(0,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)          RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(0,11)
        RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)          RC(3,6) RC(4,7) RC(4,8) RC(3,9) RC(3,10)
                        RC(4,3) RC(4,4)                          RC(4,7) RC(4,8)
                                RC(5,4)                          RC(5,7)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
    };

    encoder_left: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <30>;
        status = "disabled";
    };

    encoder_right: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <30>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder_left &encoder_right>;
        triggers-per-rotation = <15>;
    };
};
